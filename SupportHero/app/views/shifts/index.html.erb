<h3>Full Shift Schedule</h3>

<br>
<br>

<%= link_to 'Add New Shift', new_shift_path %>

<table class="table table-striped">
  <thead>
    <td>Shift ID</td>
    <td>Shift Date</td>
    <td>Employee ID</td>
    <td>Name</td>
    <td>Available?</td>
    <td>Weekend?</td>
    <td>Holiday?</td>
  </thead>
  <% @user_shifts.each do |shift| %>
    <tr>
      <td><%= shift.id %></td>
      <td><%= shift.date.to_formatted_s :long_ordinal %> <br></td>
      <td><%= shift.user_id %></td>
      <td><%= shift.user.name %></td>
      <td><%= shift.avail %></td>
      <td><%= shift.weekend %></td>
      <td><%= shift.holiday %></td>
      <td><%= link_to 'Edit', edit_shift_path(shift.id, shift.user_id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>